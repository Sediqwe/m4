- if page.current?
  li.page-item.active
    = content_tag :a, page, data: { remote: remote }, rel: page.rel, class: 'page-link', class: "btn btn-sm btn-light text-dark border border-1"
- else
  li.page-item
    = link_to page, url, remote: remote, rel: page.rel, class: 'page-link', class: "btn btn-sm btn-primary text-light  border border-1"
